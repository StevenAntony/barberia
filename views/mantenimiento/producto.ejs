<%- include('../template/header', {tituloweb: 'Corte'}); %>

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-5 align-self-center">
                <h4 class="page-title">Corte</h4>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/home">Inicio</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Corte</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="text-right">
                            <button class="btn waves-effect waves-light btn-success btnAperturarModal"  data-toggle="modal" data-target=".modalForm" type="button"><i class="fa fa-plus"></i></button>
                        </div>
                        <hr>
                        <div class="table-responsive">
                            <table id="dataTableInfo" class="table table-striped table-bordered display" style="width:100%">
                                
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade modalForm" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myLargeModalLabel"><i class="fa fa-box"></i> Producto</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <form novalidate action="/corte/create" method="post" id="formEnviar">
                        <div class="d-flex flex-wrap">
                            <div class="col-md-4 d-flex flex-wrap">
                                <div class="form-group col-12">
                                    <h5>Nombre <span class="text-danger">*</span></h5>
                                    <div class="controls">
                                        <input type="text" name="Nombre" autocomplete="off" class="form-control" required> 
                                    </div>
                                </div>
                                <div class="form-group col-12">
                                    <h5>Categoria <span class="text-danger">*</span></h5>
                                    <div class="controls">
                                        <input type="text" name="Categoria" class="form-control" autocomplete="off"> 
                                    </div>
                                </div>
                                <div class="form-group col-12">
                                    <h5>Descripción</h5>
                                    <div class="controls">
                                        <input type="text" name="Descripcion" autocomplete="off" class="form-control"> 
                                    </div>
                                </div>
                                <div class="form-group col-12">
                                    <h5>Marca</h5>
                                    <div class="controls">
                                        <input type="text" name="Marca" class="form-control" autocomplete="off"> 
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8 d-flex flex-wrap" style="height:fit-content">
                                <div class="form-group col-sm-4 col-6">
                                    <h5>Unidad</h5>
                                    <div class="controls">
                                        <input type="text" id="itmUnidad" class="form-control" autocomplete="off"> 
                                    </div>
                                </div>
                                <div class="form-group col-sm-4 col-6">
                                    <h5>Precio</h5>
                                    <div class="controls">
                                        <input type="number" id="itmPrecio" class="form-control" autocomplete="off"> 
                                    </div>
                                </div>
                                <div class="form-group col-sm-4 col-6">
                                    <h5>Costo</h5>
                                    <div class="controls">
                                        <input type="number" id="itmCosto" class="form-control" autocomplete="off"> 
                                    </div>
                                </div>
                                <div class="form-group col-sm-4 col-6">
                                    <h5>Stock</h5>
                                    <div class="controls">
                                        <input type="number" id="itmStock" class="form-control" autocomplete="off"> 
                                    </div>
                                </div>
                                <div class="form-group col-sm-4 col-6">
                                    <h5>Descontar</h5>
                                    <div class="controls">
                                        <input type="number" id="itmDescontar" class="form-control" autocomplete="off"> 
                                    </div>
                                </div>
                                <div class="form-group col-sm-4 col-6">
                                    <button class="btn btn-info w-100" style="margin-top: 28px;" type="button"><i class="fa fa-plus"></i> Presentación</button>
                                </div>
                                <div class="col-12">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Unidad</th>
                                                <th>Precio</th>
                                                <th>Costo</th>
                                                <th>Stock</th>
                                                <th>Descontar</th>
                                                <th>Opción</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger waves-effect text-left" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btnEnviarForm btn-success waves-effect text-left">Enviar</button>
                </div>
            </div>
        </div>
    </div>
<script async src="/assets/js/producto.js"></script>
<%- include('../template/footer'); %>